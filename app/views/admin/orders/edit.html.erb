<% title "Edit Order" %>

<div class="col-md-12 grid-margin stretch-card">
              <div class="card">
                <div class="card-body">
                  <h4 class="card-title">Edit Order [Order Number]</h4>
                  <p class="card-description">
                    Use the form below to edit information about an order
                  </p>
                  <form class="forms-sample">
                    <div class="form-group">
                      <label for="name">Name</label>
                      <input type="text" class="form-control" id="name" placeholder="Name" value="To Be Completed" disabled>
                    </div>
                    
                    <div class="form-group">
                        <div class="card">
                <div class="card-body">
                  <h5 class="card-title mb-4">Manage Order Items</h5>
                  <div class="fluid-container">
                    <div class="row ticket-card mt-3 pb-2 border-bottom pb-3 mb-3">
                      <div class="col-md-1">
                         <%= image_tag 'faces/face1', class: 'img-sm rounded-circle mb-4 mb-md-0' %>
                      </div>
                      <div class="ticket-details col-md-9">
                        <div class="d-flex">
                          <p class="text-dark font-weight-semibold mr-2 mb-0 no-wrap">Item Name</p>
                          <p class="text-primary mr-1 mb-0">[Variant]</p>
                          <p class="text-primary mr-1 mb-0">[€0.00]</p>
                        </div>
                        <p class="text-gray ellipsis mb-2">Item Description
                        </p>
                        <div class="row text-gray d-md-flex d-none">
                          <div class="col-4 d-flex">
                            <small class="mb-0 mr-2 text-muted text-muted">Quantity: </small>
                            <small class="Last-responded mr-2 mb-0 text-muted text-muted">1</small>
                          </div>
                          <div class="col-4 d-flex">
                            <small class="mb-0 mr-2 text-muted text-muted">Total Price :</small>
                            <small class="Last-responded mr-2 mb-0 text-muted text-muted">€0.00</small>
                          </div>
                        </div>
                      </div>
                      <div class="ticket-actions col-md-2">
                        <div class="btn-group dropdown">
                          <button type="button" class="btn btn-success dropdown-toggle btn-sm" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            Manage
                          </button>
                          <div class="dropdown-menu">
                            <a class="dropdown-item" href="#">
                              <i class="fa fa-reply fa-fw"></i>Remove From Order
                            </a>
                          </div>
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
                    </div>
                    
                    <div class="form-group">
                      <label for="note">Note</label>
                      <textarea class="form-control" id="note" rows="20" disabled><%=  %></textarea>
                    </div>
                    <div class="form-group">
                        <label for="total_price">Total Price</label>
                        <div class="input-group">
                          <div class="input-group-prepend bg-primary border-primary">
                            <span class="input-group-text bg-transparent text-white">€</span>
                          </div>
                          <input type="text" class="form-control" id="total_price" value="<%= %>">
                        </div>
                    </div>
                    <div class="form-group">
                      <label for="delivery_address">Delivery Address</label>
                      <input type="text" class="form-control" id="delivery_address" placeholder="Delivery Address" value="<%=  %>">
                    </div>
                    <div class="form-group">
                    <label for="status">Status</label>
                    <select class="form-control" id="status">
                      <option><%=  %></option>
                    </select>
                  </div>
                    <button type="submit" class="btn btn-success mr-2">Submit</button>
                    <button class="btn btn-light">Cancel</button>
                  </form>
                </div>
              </div>
            </div>
